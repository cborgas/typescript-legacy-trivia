  "license": "GPL-3.0",
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "chai": "^4.1.2",
    "jest": "^29.7.0",
    "nyc": "^15.1.0",
    "sinon": "^6.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^7.0.0",
    "typescript": "^5.2.2"
  }
}
